{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "strict": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
